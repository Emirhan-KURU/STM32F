/* USER CODE BEGIN Header_StartDefaultTask */
/**
  * @brief  Function implementing the defaultTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void *argument)
{
  /* USER CODE BEGIN 5 */

	  // micro-ROS configuration

	  rmw_uros_set_custom_transport(
	    true,
	    (void *) &huart2,
	    cubemx_transport_open,
	    cubemx_transport_close,
	    cubemx_transport_write,
	    cubemx_transport_read);

	  rcl_allocator_t freeRTOS_allocator = rcutils_get_zero_initialized_allocator();
	  freeRTOS_allocator.allocate = microros_allocate;
	  freeRTOS_allocator.deallocate = microros_deallocate;
	  freeRTOS_allocator.reallocate = microros_reallocate;
	  freeRTOS_allocator.zero_allocate =  microros_zero_allocate;

	  if (!rcutils_set_default_allocator(&freeRTOS_allocator)) {
	      printf("Error on default allocators (line %d)\n", __LINE__);
	  }

	  // micro-ROS app

	  rcl_publisher_t publisher;
	  std_msgs__msg__Int32 msg[2];
	  rclc_support_t support;
	  rcl_allocator_t allocator;
	  rcl_node_t node;
	  rcl_subscription_t subscriber;
	  rclc_executor_t executor;

	  allocator = rcl_get_default_allocator();

	  //create init_options
	  rclc_support_init(&support, 0, NULL, &allocator);

	  // create node
	  rclc_node_init_default(&node, "cubemx_node", "STM32_Discovery", &support);

	  // create publisher
	  rclc_publisher_init_default(
	    &publisher,
	    &node,
	    ROSIDL_GET_MSG_TYPE_SUPPORT(std_msgs, msg, Int32),
	    "QTR_FM");

	  //create subscriber
	  rclc_subscription_init_default(
	    &subscriber,
		&node,
		ROSIDL_GET_MSG_TYPE_SUPPORT(std_msgs, msg, Int32),
		"QTR_AM");

	  // executor
	  rclc_executor_add_subscription(
	    &executor,
		&subscriber,
		msg,
		&subscription_callback,
		ON_NEW_DATA);

	  msg[0].data = 0;
	  msg[1].data = 0;

	  for(;;)
	  {
		  void subscription_callback(const void * msgin)
		  {
		    // Cast received message to used type
		    const std_msgs__msg__Int32 * msg = (const std_msgs__msg__Int32 *)msgin;

		    // Process message
		    printf("Received: %ld\n", (long int)msg->data);

		  }

		    HAL_ADC_Start(&hadc1);

		    if (HAL_ADC_PollForConversion(&hadc1, 100000) == HAL_OK)
		    	msg[0].data = HAL_ADC_GetValue(&hadc1);

		    HAL_ADC_Stop(&hadc1);
		    HAL_ADC_Start(&hadc2);

		    if (HAL_ADC_PollForConversion(&hadc2, 100000) == HAL_OK)
		    	msg[1].data = HAL_ADC_GetValue(&hadc2);

		    HAL_ADC_Stop(&hadc2);

		    /*void (* rclc_subscription_callback_t)(const void *);

		    // Implementation example:
		    void subscription_callback(const void * msgin)
		    {
		      // Cast received message to used type
		      const std_msgs__msg__Int32 * msg = (const std_msgs__msg__Int32 *)msgin;

		      // Process message
		      printf("Received: %d\n", msg->data);
		    }*/

	    /*rcl_ret_t ret = rcl_publish(&publisher, &msg, NULL);
	    if (ret != RCL_RET_OK)
	    {
	      printf("Error publishing (line %d)\n", __LINE__);
	    }*/

		    rcl_ret_t ret =rcl_publish(&publisher, &msg[1], NULL);
		    if (ret != RCL_RET_OK)
		    {
		    	printf("Error publishing (line %d)\n", __LINE__);
		    }
		    rcl_ret_t ret2 = rcl_publish(&publisher, &msg[0], NULL);
		    if (ret2 != RCL_RET_OK)
		    {
		    	printf("Error publishing (line %d)\n", __LINE__);
		    }
		rclc_executor_spin(&executor);

	    //msg.data++;
	    osDelay(10);

	  }
  /* USER CODE END 5 */
}

